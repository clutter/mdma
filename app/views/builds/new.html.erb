<%= form_with(model: @build) do |form| %>
  <%= fieldset "1. Choose a file to upload for #{ENV['MDMA_APP_IDENTIFIER']}" do %>
    <div class="form-group">
      <%= form.label :package, 'Choose the .ipa package for this build:', class: 'sr-only' %>
      <% with_errors_on @build, :package, :version do |field_options = {}| %>
        <%= form.file_field :package, field_options %>
      <% end %>
    </div>
  <% end %>

  <%= fieldset "2. For external builds only, choose a date and time to deploy in #{Time.zone.name}" do %>
    <div class="form-row">
      <div class="form-group col-md-6">
        <%= form.label :deploy_date, class: 'sr-only' %>
        <% with_errors_on @build, :deploy_date do |field_options = {}| %>
          <%= form.date_field :deploy_date, field_options %>
        <% end %>
      </div>
      <div class="form-group col-md-6">
        <%= form.label :deploy_time, class: 'sr-only' %>
        <% with_errors_on @build, :deploy_time do |field_options = {}| %>
          <%= form.time_field :deploy_time, field_options %>
        <% end %>
      </div>
    </div>
  <% end %>

  <hr />
  <button type="submit" class="btn btn-primary">Upload and deploy</button>
<% end %>
